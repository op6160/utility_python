# .git/config

[init]
	defaultbranch = main

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[diff "astextplain"]
	textconv = astextplain

[core]
	editor = vim
	repositoryformatversion = 0
	filemode = false
	bare = false
	logallrefupdates = true
	symlinks = false
	ignorecase = true
	autocrlf = true
	fscache = true
	symlinks = false

	pager = less -x4	# Set tab stops every 4 spaces in less

[user]
	name = op6160
	email = sagvd@naver.com
	# email = sagvd01@gmail.com

[alias]
	st = status
	ci = commit
	co = checkout

	safe = '!git fetch --dry-run'	# Safe fetch alias to check for updates without pulling

	undo = reset --soft HEAD~1
	unstage = reset HEAD --
	
	first = remote add origin

	visual = "!gitk"

	lg = log --oneline --graph --decorate --all
	hist = log --pretty=format:"%h %ad | %s%d [%an]" --graph --date=short
	last = log -1 HEAD

	rb = rebase
	rbi = rebase -i
	rbc = rebase --continue
	rba = rebase --abort

	br = branch
	bd = branch -d
	bD = branch -D
	bm = branch -m

	cleanbr = !git branch -d $(git branch --merged | grep -v '^\\*\\|\\<master$')
	
	## linux
	# cleanbr = "!f() { git branch --merged | grep -vE '^\\*|master|main' | xargs -n 1 git branch -d; }; f"
	
	## windows
	# cleanbr = "!git branch --merged | Select-String -NotMatch '(\\*)' | Select-String -NotMatch 'master' | ForEach-Object { git branch -d $_.ToString().Trim() }"
[completion]
	ignorecase = true # Ignore case when completing file names

[color]
	ui = true

[color "diff"]
	meta = "yellow bold"
	frag = "magenta bold"
	old = "red bold"
	new = "green bold"

[pull]
	rebase = false # Set pull to merge by default

[push]
	default = simple # Set push only current branch

[log]
	decorate = short # Short decorations in log output
	abbrevcommit = true # short commit hash

[http]
	sslbackend=schannel

[credential]
	helper = manager